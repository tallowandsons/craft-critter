{% macro configWarning(setting) -%}
    {{ 'This is being overridden by the `{setting}` config setting.'|t('critter', {setting: setting})|markdown(inlineOnly=true) }}
{%- endmacro %}

{% macro configGroupWarning(setting) -%}
    <div class="field">
        <p class="warning has-icon">
            <span class="icon" aria-hidden="true"></span>
            <span class="visually-hidden">Warning: </span>
            <span>
                {{ 'These settings are being overridden by the `{setting}` config setting.'|t(craft.critter.pluginHandle, {setting: setting })|markdown(inlineOnly=true) }}
            </span>
        </p>
    </div>
{%- endmacro %}
